<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="CondominioSmart.Views.MenuPage"
    Title="Menu"
     NavigationPage.HasBackButton="True">

    <NavigationPage.TitleView>
        <StackLayout
            Padding='0,-6,-6,6'
            HorizontalOptions="Start">
            <SearchBar>
                
            </SearchBar>
        </StackLayout>
    </NavigationPage.TitleView>



    <StackLayout>

        <Button
            Command="{Binding InformacoesCommand}"
            Text="Informações">
        </Button>

        <Button
            Command="{Binding ReclamacoesCommand}"
            Text="Reclamações">
        </Button>

        <Button
            Command="{Binding AtendimentosCommand}"
            Text="Atendimento">
        </Button>

        <Button
            Command="{Binding PortariaCommand}"
            Text="Portaria">
        </Button>

        <Button
            Command="{Binding ScannerCommand}"
            Text="Scanner">
        </Button>

        <Entry
            Text="{Binding Entry}">
            
        </Entry>

    </StackLayout>

</ContentPage>