<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    BindingContext="{Binding Main, Source={StaticResource Locator}}"
    x:Class="CondominioSmart.Views.MenuPage"
    Title="Menu">



    <StackLayout
            BindingContext="{Binding Menu}">

        <Button
            Command="{Binding InformacoesCommand}"
            Text="Informações">
        </Button>

        <Button
            Command="{Binding ReclamacoesCommand}"
            Text="Reclamações">
        </Button>

        <Button
            Command="{Binding AtendimentosCommand}"
            Text="Atendimento">
        </Button>

        <Button
            Command="{Binding PortariaCommand}"
            Text="Portaria">
        </Button>

    </StackLayout>

</ContentPage>